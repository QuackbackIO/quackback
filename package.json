{
  "name": "quackback",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "bun run --filter @quackback/web dev",
    "build": "bun run --filter @quackback/web build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:push": "bun run --cwd packages/db db:push",
    "db:studio": "bun run --cwd packages/db db:studio",
    "db:seed": "bun packages/db/src/seed.ts",
    "db:reset": "bun packages/db/src/reset.ts",
    "reset": "bun packages/db/src/reset.ts && bun run db:push && bun packages/db/src/seed.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@hookform/resolvers": "^5.2.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3",
    "react-hook-form": "^7.67.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
