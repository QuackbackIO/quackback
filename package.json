{
  "name": "quackback",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "ee/packages/*",
    "ee/scripts/internal/*",
    "scripts/*"
  ],
  "resolutions": {
    "zod": "^4.1.12"
  },
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "bun run --filter @quackback/web dev",
    "build": "bun scripts/prepare-edition.ts && bun run --filter @quackback/web build",
    "build:community": "EDITION=self-hosted INCLUDE_EE=false bun run build",
    "build:enterprise": "EDITION=self-hosted INCLUDE_EE=true bun run build",
    "build:cloud": "EDITION=cloud INCLUDE_EE=true bun run build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:e2e": "bun run --filter @quackback/web test:e2e",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:studio": "bun run --cwd packages/db db:studio",
    "db:seed": "bun packages/db/src/seed.ts",
    "db:reset": "bun packages/db/src/reset.ts",
    "db:generate-csv": "bun packages/db/src/generate-sample-csv.ts",
    "reset": "bun packages/db/src/reset.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@hookform/resolvers": "^5.2.2",
    "@types/node": "^24.10.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.3",
    "react-hook-form": "^7.68.0",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@better-auth/sso": "1.3.10",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@tanstack/react-router-ssr-query": "^1.144.0",
    "@tiptap/extension-link": "3.13.0",
    "@tiptap/extension-placeholder": "3.13.0",
    "@tiptap/pm": "3.13.0",
    "@tiptap/react": "3.13.0",
    "@tiptap/starter-kit": "3.13.0",
    "better-auth": "^1.4.10",
    "react-router-dom": "^7.11.0",
    "stripe": "^20.0.0",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@noble/ciphers": "2.0.0"
  }
}
