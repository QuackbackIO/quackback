# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/quackback"

# App
# Local dev with subdomains: use .localhost (modern browsers resolve *.localhost to 127.0.0.1)
# Production: use your actual domain
NEXT_PUBLIC_APP_URL="http://app.localhost:3000"

# Auth (Better-auth)
BETTER_AUTH_SECRET="your-secret-key-here"
