{
  "name": "@quackback/db",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema/index.ts",
    "./schema/statuses": "./src/schema/statuses.ts",
    "./catalog": "./src/catalog/index.ts",
    "./tenant": "./src/tenant/index.ts",
    "./migrate": "./src/migrate-runtime.ts",
    "./init-sql": "./src/init-sql.generated.ts",
    "./queries/public": "./src/queries/public.ts",
    "./types": "./src/types.ts",
    "./drizzle/*": "./drizzle/*",
    "./tenant-schema.sql": "./dist/tenant-schema.sql"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:generate-init-sql": "bun scripts/generate-init-sql.ts",
    "db:generate-tenant-schema": "bun scripts/generate-tenant-schema.ts",
    "db:generate:catalog": "drizzle-kit generate --config=drizzle-catalog.config.ts",
    "db:generate:tenant": "drizzle-kit generate --config=drizzle-tenant.config.ts",
    "db:migrate": "bun run src/migrate.ts",
    "db:migrate:cli": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/seed.ts",
    "db:reset": "bun src/reset.ts",
    "db:migrate-tenants": "bun run ../../scripts/migrate-neon-dbs.ts"
  },
  "dependencies": {
    "@quackback/ids": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.3.9",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "drizzle-kit": "^0.31.9"
  }
}
