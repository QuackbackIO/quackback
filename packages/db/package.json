{
  "name": "@quackback/db",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema/index.ts",
    "./catalog": "./src/catalog/index.ts",
    "./tenant": "./src/tenant/index.ts",
    "./queries/public": "./src/queries/public.ts",
    "./queries/subscriptions": "./src/queries/subscriptions.ts",
    "./queries/usage": "./src/queries/usage.ts",
    "./queries/domains": "./src/queries/domains.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:generate:catalog": "drizzle-kit generate --config=drizzle-catalog.config.ts",
    "db:generate:tenant": "drizzle-kit generate --config=drizzle-tenant.config.ts",
    "db:migrate": "bun run src/migrate.ts",
    "db:migrate:cli": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/seed.ts",
    "db:reset": "bun src/reset.ts",
    "db:migrate-tenants": "bun run src/scripts/migrate-to-tenant-dbs.ts",
    "db:migrate-tenants:dry-run": "bun run src/scripts/migrate-to-tenant-dbs.ts --dry-run"
  },
  "dependencies": {
    "@quackback/ids": "workspace:*",
    "drizzle-orm": "^0.45.0",
    "postgres": "^3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.3.4",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8"
  }
}
