{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "types": ["node"]
  },
  "references": [
    { "path": "apps/web" },
    { "path": "packages/db" },
    { "path": "packages/domain" },
    { "path": "packages/shared" },
    { "path": "packages/integrations" }
  ]
}
